doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/vendor/font-awesome-4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='shortcut icon', href='/img/Indev logo.png', type='image/x-icon')
    title InDev | Indie Developers Store
  body
    // TOP
    .container
      .row
        .col
          span.top-phone
            p.toppei Atención al cliente: (507) 6401-2985
        .col-5
        .col
          ul.account
            p.toppei
              a(href='/login') Registrarse
              |                         |
              a(href='/login') Iniciar Sesión
      // HEADER
      .row
        .col-sm-8.offset-sm-2.text-center
          a.imagen(href='/')
              img(src='/img/Indev logo.png', width='25%')
      .row
        .col-sm-8.offset-sm-2.text-center
          .search_wrap.align-bottom
            input.search_tx(type='text', placeholder='¿Qué estás buscando?')
            button.btnindev(type='submit')
              i.fa.fa-search.text-white
          // CARRITO
    br
    // BARRA MENU
    .menu
      .row
        .col
        .col-6
          nav.navbar.navbar-default
            .container
              ul.nav.nav-pills
                a.nav-link.dropdown-toggle(data-toggle='dropdown', href='#', role='button', aria-haspopup='true', aria-expanded='false') CATEGORIAS
                .dropdown-menu
                  a.dropdown-item(href='#') EDUCATIVAS
                  a.dropdown-item(href='#') EMPRESARIALES
                  a.dropdown-item(href='#') JUEGOS
                  .dropdown-divider
                  a.dropdown-item(href='#') SERVICIOS
                li.nav-item
                  a.nav-link(href='#') PRODUCTOS
                li.nav-item
                  a.nav-link(href='#') DESARROLLADORES
                li.nav-item
                  a.nav-link(href='#') CUENTA
        .col
    
    block contenido

    script(src='/jquery/dist/jquery.min.js')
    script(src='/bootstrap/dist/js/bootstrap.min.js')
    // Footer
    block piepag
      footer.bg-dark
        // Copyright
        .footer-copyright.py-3.mt-3.text-white.text-center
          | © 2018 Copyright:
          strong
            span(style='font-style: italic')
              | In
              span(style='color:#cc0000') Dev
            |  Panamá | Joel Gutierrez | Isaac Quinzada
          br
          strong El espacio con el que siempre soñastes
      // /.Copyright
    // /.Footer
    
