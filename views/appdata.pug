extends base
block contenido
    .container-fluid.mt-3
        .row
            .col-sm-8.offset-sm-2
                h2.mt-2 Aplicaciones encontradas:
                br
                h6 Seleccione la que desea descargar y/o comprar
                h6(style='color:#cc0000') #{mensaje}
                table.table.table-bordered.table-hover.table-responsive-sm
                    thead.thead-dark
                        tr
                            th Nombre
                            th Descripci√≥n
                            th Precio
                            th Logo
                            th Archivo
                            th Paypal
                        each lista in modelo
                            tr
                                td
                                    | #{lista.nombre}
                                td
                                    | #{lista.descripcion}
                                td
                                    | #{lista.precio}
                                td
                                    img(src=lista.logo.replace('public',''), width='100px')
                                td
                                    a(href=lista.archivo.replace('public',''), download='')
                                        button.btn.btn-info Descargar
                                td 
                                    #paypal-button
    script(src='https://www.paypalobjects.com/api/checkout.js')
    script.
        paypal.Button.render({
        env: 'sandbox',
        client: {
        sandbox: 'demo_sandbox_client_id'
        },
        payment: function (data, actions) {
        return actions.payment.create({
        transactions: [{
        amount: {
        total: '0.01',
        currency: 'USD'
        }
        }]
        });
        },
        onAuthorize: function (data, actions) {
        return actions.payment.execute()
        .then(function () {
        window.alert('Thank you for your purchase!');
        });
        }
        }, '#paypal-button');
